<%= render "layouts/navbar_home" %>

<div class="container">
  <div class="row"> 
    <h1>お知らせ投稿</h1>
    <%= form_with(model: @micropost, local: true, class: "w-100") do |f| %>
      <div class="form-group">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :content, "内容" %>
        <%= f.text_area :content, class: 'form-control', rows: 5 %>
      </div>
      <%= f.submit '投稿', class: 'btn btn-dark btn-block' %>
    <% end %>
  </div>
</div>
