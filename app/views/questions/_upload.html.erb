<div class="mb-5">
  <div class="card w-100">
    <div class="card-header">
      <h1 class="text-center thin-text">投稿フォーム</h1>
    </div>
    <div class="card-body">
      <%= form_with(model: @question, local: true, class: "w-100") do |f| %>
        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :tag, "タグ" %>
          <%= f.select :tag, [
            
          ["その他","その他"],
          ["人間関係","人間関係"],
          ["恋愛","恋愛"],
          ["仕事","仕事"],
          ["家庭","家庭"],
          ["学校","学校"],
          ["勉強","勉強"],
          ["プログラミング","プログラミング"],
          ["美容","美容"],
          ["遊び","遊び"],
          ["スポーツ","スポーツ"],
          ["ニュース","ニュース"]
          
          ], {}, class: "form-control" %>
        </div>   

        <div class="form-group">
          <%= f.label :content, "内容" %>
          <%= f.text_area :content, class: "form-control", rows: 2 %>
        </div>   
        <div>
          <%= f.submit "投稿", class: "btn btn-block btn-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>