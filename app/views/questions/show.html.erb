<%= render "layouts/navbar_home" %>

<div class="container">
  <div class="row">
    <div class="show-question-message">
      <p class="show-question-title"><%= @question.title %></p>
      
      <p class="show-question-content"><%= @question.content %></p>
      
      <p><%= @question.user.name %></p>
      
      <p><%= @question.tag %></p>
      
      <% if current_user == @question.user %>
        <%= link_to "Delete", @question, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger btn-sm' %>
      <% end %>
    </div>
  </div>
  
  <div class="row">

  </div>
</div>