<%= render "layouts/navbar_profail" %>

<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <div class="text-center card">
        <div class="card-header">
          <%= image_tag(@user.picture_url) if @user.picture.present? %>
        </div>
        <div class="card-body">
          <%= link_to "編集", edit_user_path(@user), class: "btn btn-block btn-success" %>
          <div class="mt-2">
            <%= link_to "アカウント削除", withdraw_path, method: :delete, data: { confirm: "本当にアカウントを削除しますか？" }, class: "btn btn-block btn-danger" %>
          </div>
        </div>
      </div>  
    </div>
    <div class="col-sm-8 offset-sm-1">
      <table class="table">
        <thead>
          <tr>
            <h3>プロフィール</h3>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">アカウント名</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th scope="row">メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

