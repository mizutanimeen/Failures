<%= render "layouts/navbar_profail" %>

<div class="container">
  <div class="row">
    <div class="col-sm-3 mb-4">
      <div class="text-center card">
        <div class="card-header text-center">
          <% if @user.picture? %>
            <%= image_tag @user.picture.url, class: "resize-img" %>
          <% else %>
            <%= image_tag "/public/default_user.png", class: "resize-img" %>
          <% end %>
        </div>
        <% if current_user == @user %>
          <div class="card-body">
            <%= link_to "編集", edit_user_path(@user), class: "btn btn-block btn-success" %>
            <div class="mt-2">
              <%= link_to "アカウント削除", withdraw_path, method: :delete, data: { confirm: "アカウントを本当にアカウントを削除しますか？" }, class: "btn btn-block btn-danger" %>
            </div>
          </div>
        <% end %>
      </div>  
    </div>
    <div class="col-sm-8 offset-sm-1">
      <table class="table">
        <thead>
          <tr>
            <h3>プロフィール</h3>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">アカウント名</th>
            <td><%= @user.name %></td>
          </tr>
          <% if current_user == @user %>
            <tr>
              <th scope="row">メールアドレス</th>
              <td><%= @user.email %></td>
            </tr>
          <% end %>  
        </tbody>
      </table>
    </div>
  </div>
</div>

