<%= render "layouts/navbar_profail" %>

<div class="container">
  <h1 class="reverse-color">回答一覧</h1>
  <% @replys.each do |reply| %>
    
    <div class="frame reply-frame">
      <div class="word-table">
        <% @question_id = reply.question.id %>
        <div class="reply-content reply-border"><h5>投稿：  <%= link_to reply.question.title, question_path(@question_id), class: "link-color" %></h5></div>
        <div class="reply-content"><h5>回答：  <%= link_to reply.content, question_path(@question_id), class: "link-color" %></h5></div>
      </div>
    </div>
  <% end %>

  <%= paginate @replys, window: 2 %>
</div>